<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/pattern</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBar">true</item>
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="MainTheme" parent="MainTheme.Light">
		<item name="android:windowBackground">@drawable/pattern</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="colorPrimaryDark">#ff69b4</item>
	</style>

	<!--Light theme-->
	<style name="MainTheme.Light" parent="MainTheme.Base">
		<item name="colorPrimary">#ffcb7c</item>
		<item name="colorPrimaryDark">#1666a6</item>
		<item name="colorAccent">#dff6fc</item>
	</style>

	<!--Dark theme-->
	<style name="MainTheme.Dark" parent="MainTheme.Base">
		<item name="colorPrimary">#1666a6</item>
		<item name="colorPrimaryDark">#1666a6</item>
		<item name="colorAccent">#ffcb7c</item>
	</style>

	<!--Base theme for API 21 and up-->
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
	</style>

</resources>
<!--You can switch between the light and dark themes in your code by setting the MainTheme style as the parent of
either MainTheme.Light or MainTheme.Dark.-->